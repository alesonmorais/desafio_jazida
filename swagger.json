        "description": "Criar novo pokémon no sistema",
        "summary": "Criar um novo pokémon no sistema",
        "parameters": [
          {
            "name": "treinador",
            "in": "body",
            "description": "String do nome do treinador pokémon"
          },{
            "name": "tipo",
            "in": "body",
